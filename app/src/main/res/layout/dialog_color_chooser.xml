<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_color_chooser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/popupBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pop_color_chooser_closeDialogImg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_clear_black_24dp"
        android:tint="#fff"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="@string/choose_a_color"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size"/>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <!-- Top Row -->

            <LinearLayout
                android:id="@+id/paint_colors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/color1"
                    android:layout_width="@dimen/color_chooser_color_size"
                    android:layout_height="@dimen/color_chooser_color_size"
                    android:layout_margin="2dp"
                    android:background="#FF000000"
                    android:contentDescription="@string/paint"
                    android:src="@drawable/paint"
                    android:tag="#FF000000"/>

                <ImageButton
                    android:id="@+id/color2"
                    android:layout_width="@dimen/color_chooser_color_size"
                    android:layout_height="@dimen/color_chooser_color_size"
                    android:layout_margin="2dp"
                    android:background="#FFFF0000"
                    android:contentDescription="@string/paint"
                    android:src="@drawable/paint"
                    android:tag="#FFFF0000"/>

                <ImageButton
                    android:id="@+id/color3"
                    android:layout_width="@dimen/color_chooser_color_size"
                    android:layout_height="@dimen/color_chooser_color_size"
                    android:layout_margin="2dp"
                    android:background="#FFFF6600"
                    android:contentDescription="@string/paint"
                    android:src="@drawable/paint"
                    android:tag="#FFFF6600"/>

                <ImageButton
                    android:id="@+id/color4"
                    android:layout_width="@dimen/color_chooser_color_size"
                    android:layout_height="@dimen/color_chooser_color_size"
                    android:layout_margin="2dp"
                    android:background="#FFFFCC00"
                    android:contentDescription="@string/paint"
                    android:src="@drawable/paint"
                    android:tag="#FFFFCC00"/>

                <ImageButton
                    android:id="@+id/color5"
                    android:layout_width="@dimen/color_chooser_color_size"
                    android:layout_height="@dimen/color_chooser_color_size"
                    android:layout_margin="2dp"
                    android:background="#FF009900"
                    android:contentDescription="@string/paint"
                    android:src="@drawable/paint"
                    android:tag="#FF009900"/>

                <ImageButton
                    android:id="@+id/color6"
                    android:layout_width="@dimen/color_chooser_color_size"
                    android:layout_height="@dimen/color_chooser_color_size"
                    android:layout_margin="2dp"
                    android:background="#FF009999"
                    android:contentDescription="@string/paint"
                    android:src="@drawable/paint"
                    android:tag="#FF009999"/>
            </LinearLayout>

            <!-- Bottom Row -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/color7"
                    android:layout_width="@dimen/color_chooser_color_size"
                    android:layout_height="@dimen/color_chooser_color_size"
                    android:layout_margin="2dp"
                    android:background="#FF0000FF"
                    android:contentDescription="@string/paint"
                    android:src="@drawable/paint"
                    android:tag="#FF0000FF"/>

                <ImageButton
                    android:id="@+id/color8"
                    android:layout_width="@dimen/color_chooser_color_size"
                    android:layout_height="@dimen/color_chooser_color_size"
                    android:layout_margin="2dp"
                    android:background="#FF990099"
                    android:contentDescription="@string/paint"
                    android:src="@drawable/paint"
                    android:tag="#FF990099"/>

                <ImageButton
                    android:id="@+id/color9"
                    android:layout_width="@dimen/color_chooser_color_size"
                    android:layout_height="@dimen/color_chooser_color_size"
                    android:layout_margin="2dp"
                    android:background="#FFFF6666"
                    android:contentDescription="@string/paint"
                    android:src="@drawable/paint"
                    android:tag="#FFFF6666"/>

                <ImageButton
                    android:id="@+id/color10"
                    android:layout_width="@dimen/color_chooser_color_size"
                    android:layout_height="@dimen/color_chooser_color_size"
                    android:layout_margin="2dp"
                    android:background="#FFFFFFFF"
                    android:contentDescription="@string/paint"
                    android:src="@drawable/paint"
                    android:tag="#FFFFFFFF"/>

                <ImageButton
                    android:id="@+id/color11"
                    android:layout_width="@dimen/color_chooser_color_size"
                    android:layout_height="@dimen/color_chooser_color_size"
                    android:layout_margin="2dp"
                    android:background="#FF787878"
                    android:contentDescription="@string/paint"
                    android:src="@drawable/paint"
                    android:tag="#FF787878"/>

                <ImageButton
                    android:id="@+id/color12"
                    android:layout_width="@dimen/color_chooser_color_size"
                    android:layout_height="@dimen/color_chooser_color_size"
                    android:layout_margin="2dp"
                    android:background="#FF660000"
                    android:contentDescription="@string/paint"
                    android:src="@drawable/paint"
                    android:tag="#FF660000"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>